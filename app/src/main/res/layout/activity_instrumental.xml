<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tp.edu.sg.musicstreamv10.instrumental">


    <ScrollView

        android:layout_width="411dp"
        android:layout_height="630dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/S1001"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:onClick="handleSelection"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/lost_stars" />

            <TextView
                android:id="@+id/txtTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:onClick="handleSelection"
                android:text="Lost Stars"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/S1001"
                app:layout_constraintTop_toTopOf="@+id/S1001" />


            <TextView
                android:id="@+id/txtArtist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="handleSelection"
                android:text="Adam Levine"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/txtTitle1"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle1" />

            <ImageButton
                android:id="@+id/S1002"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:onClick="handleSelection"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/S1001"
                app:srcCompat="@drawable/roar" />

            <TextView
                android:id="@+id/txtTitle2"
                android:onClick="handleSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roar"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/S1002"
                android:layout_marginLeft="15dp"
                app:layout_constraintTop_toTopOf="@+id/S1002"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp" />


            <TextView
                android:id="@+id/txtArtist2"
                android:onClick="handleSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Katy Perry"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/txtTitle2"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle2" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="416dp"
        android:layout_height="61dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        tools:layout_editor_absoluteX="-5dp"
        app:layout_constraintHorizontal_bias="1.0">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="-5dp"
            android:background="?attr/colorPrimary"
            android:backgroundTint="#F26869"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </android.support.v7.widget.Toolbar>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>
